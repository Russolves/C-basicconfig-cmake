{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ (GDB/LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",  // Adjust this path to point to your executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Ensure this path is correct
            "preLaunchTask": "build"
        }
    ]
}
